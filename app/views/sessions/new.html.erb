<div class="form"> 
  <h3>Log in: </h3>
  <%= form_tag '/sessions' do %>
    <%= label_tag :username %><br>
    <%= text_field_tag :username %><br>
    <%= label_tag :password %><br>
    <%= password_field_tag :password %><br>
    <%= submit_tag 'Enter', :class => 'button' %><br>
  
    <p>Or:&nbsp;&nbsp;<a><%= link_to 'Sign up', new_user_path %></a></p> 
  <% end %>
</div>