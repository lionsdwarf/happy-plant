<div class="edit-recipient-form"> 
  <p> Edit MMS Recipient: </p>
  <%= form_for @recipient do |f| %>
  
    <%= f.label :name %> <br>
    <%= f.text_field :name %>
    <br>
    <%= f.label :phone %> <br>
    <%= f.text_field :phone_num %>
    <br>

    <%= f.submit 'Save', :class => 'button' %> <br>
  <% end %>
  <div class="back">
    <%= link_to "Back", recipients_path %> <br>
  </div>
</div>