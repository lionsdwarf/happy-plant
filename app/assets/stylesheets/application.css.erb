@import url('//fonts.googleapis.com/css?family=Amatic+SC');

body {
  background-image: url(<%= asset_path('fuzzyleaves.jpg') %>);
  background-repeat: no-repeat;
  background-size: cover;
  font-family: 'Amatic SC', cursive;
  padding: 4em;
}

h1 {
  font-weight: 500;
  font-size: 110px;
  text-align: center;
  color: rgba(176, 065, 096, 1);
  /*color: rgba(255,255,255,1);*/
}

.page {
  background-color: rgba(255,255,255, 0.3);
  border-radius: 0.5em;
  padding: 0.5em;
  color: rgba(56,56,56,1);
}

.landing-page-blurb {
  font-size: 40px;
  text-align: center;
  line-height: 1.4em;
  padding-left: 1.4em;  
  padding-right: 1.4em;   
}

.session-header {
  margin-top: .4em;
  font-size: 65px;
  font-weight: 400;
  text-align: center;
  color: rgba(176, 065, 096, 1);
  margin-bottom: 0;
  line-height: 1.4em;
}

.welcome-logout {
  text-align: center;
  font-size: 28px;
}

.welcome-logout a {
  color: rgba(0,63,76, 0.8);
  text-decoration: none;
}

.welcome-msg {
  margin: 0;
}

.login-signup-links {
  text-align: center;
  border-radius: 0.5em;
  padding: 1em;
}

.login-signup-links a {
  font-size: 45px;
  text-decoration: none;
  color: rgba(0,63,76, 0.8);
  font-weight: 400;
}

.login-signup-links a:hover {
  color: rgba(176, 065, 096, 1)
}

#pipe {
  color: rgba(56,56,56, 0.5);
}

.form {
  font-size: 32px;
  text-align: center;
}

.form h3 {
  color: rgba(0,63,76, 0.8);
  font-weight: 200
}

.form a {
  text-decoration: none;
  color: rgba(0,63,76, 0.8);

}

.form a:hover {
  color: rgba(176, 065, 096, 1);
}
/*
.signup-form {
  font-size: 32px;
  text-align: center;
}*/

.signup-form h3 {
  color: rgba(0,63,76, 0.8);
  font-weight: 200
}

.signup-form a {
  text-decoration: none;
  color: rgba(0,63,76, 0.8);

}

.signup-form a:hover {
  color: rgba(176, 065, 096, 1);
}

form input[type='text'] {
  height: 32px;
  width: 165px;
  background-color: rgba(255,255,255, 0);
  text-align: center;
  font-size: 22px;
  font-family: Helvetica;
  font-weight: 200;
  border-radius: 0.3em;
  border-style: ridge;
  border-color: rgba(255,255,255, .4)
}

form input[type='password'] {
  height: 32px;
  width: 165px;
  background-color: rgba(255,255,255, 0);
  text-align: center;
  font-size: 22px;
  font-family: Helvetica;
  font-weight: 200;
  border-radius: 0.3em;
  border-style: ridge;
  border-color: rgba(255,255,255, .4)
}

.plant-recipient-links {
  margin-top: .2em;
  text-align: center;
  margin-top: 1.3em;
  font-size: 40px;
  margin-top: 0.2em;

}

.plant-recipient-links a {
  color: rgba(0,63,76, 0.8);
  text-decoration: none;
}

#pipe2 {
  color: rgba(56,56,56,1);
}

.plants {
  color: rgba(56,56,56,1);
  text-align: center;
}

.plants h3 {
  font-size: 35px;
  margin-top: 0.3em;
}

.plant {
  height: 400px;
  width: 300px;
  border-style: solid;
  border-color: rgba(56,56,56,0.6);
  border-radius: 0.3em;
  border-width: 1px;
  background-color: rgba(255,255,255, 0.3);
  display: inline-block;
  border-radius: 0.4em;
  margin: .5em;
}

.plant img {
  max-height: 300px;
  max-width: 200px;
  border-style: solid;
  border-color: rgba(176, 065, 096, 1);
  border-radius: 0.3em;
  border-width: 1px;
}

.plant a {
  /*color: rgba(0,63,76, 0.8);*/
  color: rgba(176, 065, 096, 1);
  text-decoration: none;
  font-size: 36px;
}

.plant h2 {
  margin: 0;
  font-size: 30px;
}

.plant p {
  font-size: 34px;
  margin: 0;
}

.plant-show {
  text-align: center;

/*  height: 650px; */
  width: 600px;
  border-style: solid;
  border-color: rgba(56,56,56,0.6);
  border-width: 1px;
  background-color: rgba(255,255,255, 0.5);
  border-radius: 0.4em;
  margin: .5em;
}

.plant-show img {
  max-height: 400px;
  max-width: 400px;
  border-style: solid;
  border-color: rgba(176, 065, 096, 1);
  border-radius: 0.3em;
  border-width: 1px;
}

.plant-show h2 {
  color: rgba(176, 065, 096, 1);
  text-decoration: none;
  font-size: 50px;
  margin-top: 0.5em;
  margin-bottom: 0;
}

.plant-show h3 {
  font-size: 35px;
  margin-top: 0;
  margin-bottom: 0.3em;
}

.plant-show a {
  font-size: 32px;
  font-weight: 600px;
  color: rgba(0,63,76, 0.8);
  text-decoration: none;
}

.recipients-index {
  padding-top: 1em;
  font-size: 35px;
  text-align: center;
  padding: none;
}

.recipients-index a {
  text-decoration: none;
  color: rgba(0,63,76, 0.8);
}

.recipients-index .add-recipient {
  margin-bottom: 0.6em;
}

.edit-recipient-form {
  font-size: 35px;
  text-align: center;
}

.button {
  color: rgba(176, 065, 096, 1);
  margin-top: 0.4em;
  background:none!important;
  /*padding:0!important;*/
  font: inherit;
  border-width: 2px;
  border-radius: 4px; 
  cursor: pointer;
}

.delete-button {
  color: rgba(176, 065, 096, 1);
  margin-top: 0.4em;
  background:none!important;
  /*padding:0!important;*/
  font: inherit;
  border:none;
  font-size: 32px;
}